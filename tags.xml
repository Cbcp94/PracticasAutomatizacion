<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test thread-count="5" name="Casos de Prueba Anotaciones">
        <groups>
            <run>
                <include name="funcional"/>
            </run>
        </groups>
        <classes>
            <class name="anotacionestestng.AnotacionesBasicasTest"/>
            <class name="anotacionestestng.SegundoSetTest" />
        </classes>
    </test> <!-- Prueba de anotraciones -->

    <test name="Casos de Pruebas nuevos">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="anotacionestestng.TercerSet"/>
        </classes>
    </test> <!-- nuevo set de pruebas -->
</suite>